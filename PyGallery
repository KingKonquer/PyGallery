pen = t.Turtle()
screen = t.Screen()
screen.tracer(0)
pen.hideturtle()


image_size = 80

def render():
  if current_enviroment == "main":
    X=-190
    Y=110
    for i in range(len(images)):
      loaded_image = images[i].split(".")
      loaded_image = loaded_image[1:]
      print(loaded_image)
      X += image_size+20
      
      pen.penup()
      pen.goto(X,Y)
      pen.pendown()
      for _ in range(4):
        pen.forward(image_size)
        pen.left(90)
      pen.penup()
      pen.goto(X+(image_size/2)-(len(images[i].split(".")[0])*2),Y-10)# 40 is half of 80.   (in the middle)  y is just a good text offset
      pen.color("black")
      pen.write(images[i].split(".")[0])
      pen.goto(X+1,Y+1)
      image_x = X+1
      image_y = Y+image_size
      for hight in range(76):
        for width in range(84):
          pixel_value = loaded_image[hight][width]
          if pixel_value == "0":
              pen.color("white")
          elif pixel_value == "1":
              pen.color("black")
          elif pixel_value == "3":
              pen.color("red")
          elif pixel_value == "2":
              pen.color("cyan")
          elif pixel_value == "4":
              pen.color("lightgreen")
          elif pixel_value == "5":
              pen.color("orange")
          else:
              print("pluh")
          pen.pendown()
          pen.forward(1)
          pen.pensize(1)
          image_x += 1
        pen.penup()
        image_y -= 1
        image_x = X + 1
        pen.goto(image_x, image_y)


        
      if (i + 1) % 3 == 0:
        X= -190
        Y-= image_size+20
    screen.update()
for i in range(2):
  render()
t.mainloop()
